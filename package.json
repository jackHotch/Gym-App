{
  "name": "gymapp",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "storybook": "turbo storybook",
    "remove:node_modules": "npm exec --workspaces -- npx rimraf node_modules && npx rimraf node_modules",
    "remove:package-lock": "npm exec --workspaces -- npx rimraf package-lock.json && npx rimraf package-lock.json",
    "clean": "npm run remove:node_modules && npm run remove:package-lock"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.4",
    "turbo": "^2.0.14",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.2.3",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "@tailwindcss/postcss": "^4.1.8",
    "motion": "^11.17.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8"
  }
}
